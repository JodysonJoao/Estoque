@page
@model PumpFit_Stock.Pages.estoqueModel
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="PT-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ELITE-register</title>
    <link rel="stylesheet" href="~/css/paginainicial.css"/>
    <link rel="stylesheet" href="~/css/estoque.css">
    <script src="~/js/LoginRegister.js" defer></script>
</head>
<body>

    <div class="forms-container">
        <form class="add-product-form">
            <label for="product-name">Nome do Produto:</label>
            <input type="text" id="product-name" required>

            <label for="product-quantity">Quantidade:</label>
            <input type="number" id="product-quantity" required>

            <label for="product-size">Tamanho:</label>
            <select id="product-size" required>
                <option value="P">P</option>
                <option value="M">M</option>
                <option value="G">G</option>
            </select>

            <label for="product-color">Cor:</label>
            <input type="text" id="product-color" required>

            <label for="product-image">Imagem do Produto:</label>
            <input type="file" id="product-image" accept="image/*" required>

            <button type="submit">Adicionar Produto</button>
        </form>

        <form class="sale-form">
            <label for="sale-product">Produto:</label>
            <select id="sale-product" required>
            </select>

            <label for="sale-quantity">Quantidade:</label>
            <input type="number" id="sale-quantity" required>

            <label for="sale-size">Tamanho:</label>
            <select id="sale-size" required>
                <option value="P">P</option>
                <option value="M">M</option>
                <option value="G">G</option>
            </select>

            <label for="sale-value">Preco:</label>
            <input type="text" id="sale-value" required>

            <button type="submit">Vender Produto</button>
        </form>
    </div>

    <div id="productContainer"></div>

</body>
</html>